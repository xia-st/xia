mon = peripheral.wrap("right")
if not mon then
	print("Not find monitor!")
	return
end
mon.clear()
mon.setTextScale(5)
while true do
	time = os.time()
	hour = math.ceil(time) - 1
	minute = (time - hour) * 100 * 0.6
	minute = math.ceil(minute) - 1
	mon.clear()
	mon.setCursorPos(1, 1)
	if hour < 10 then
		mon.write("0" .. hour)
	else
		mon.write(hour)
	end
	if minute < 10 then
		mon.write(":0" .. minute)
	else
		mon.write(":" .. minute)
	end
	sleep(1.65)
end
